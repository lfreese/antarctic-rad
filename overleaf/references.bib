@article{wang_understanding_2019,
	title = {Understanding the {Atmospheric} {Temperature} {Adjustment} to {CO2} {Perturbation} at the {Process} {Level}},
	volume = {33},
	issn = {0894-8755, 1520-0442},
	url = {https://journals.ametsoc.org/view/journals/clim/33/3/jcli-d-19-0032.1.xml},
	doi = {10.1175/JCLI-D-19-0032.1},
	abstract = {{\textless}section class="abstract"{\textgreater}{\textless}h2 class="abstractTitle text-title my-1" id="d91013353e87"{\textgreater}Abstract{\textless}/h2{\textgreater}{\textless}p{\textgreater}Climate model comparisons show that there is considerable uncertainty in the atmospheric temperature response to CO$_{\textrm{2}}$ perturbation. The uncertainty results from both the rapid adjustment that occurs before SST changes and the slow feedbacks that occur after SST changes. The analysis in this paper focuses on the rapid adjustment. We use a novel method to decompose the temperature change in AMIP-type climate simulation in order to understand the adjustment at the process level. We isolate the effects of different processes, including radiation, convection, and large-scale circulation in the temperature adjustment, through a set of numerical experiments using a hierarchy of climate models. We find that radiative adjustment triggers and largely controls the zonal mean atmospheric temperature response pattern. This pattern is characterized by stratospheric cooling, lower-tropospheric warming, and a warming center near the tropical tropopause. In contrast to conventional views, the warming center near the tropopause is found to be critically dependent on the shortwave absorption of CO$_{\textrm{2}}$. The dynamical processes largely counteract the effect of the radiative process that increases the vertical temperature gradient in the free troposphere. The effect of local convection is to move atmospheric energy vertically, which cools the lower troposphere and warms the upper troposphere. The adjustment due to large-scale circulation further redistributes energy along the isentropic surfaces across the latitudes, which cools the low-latitude lower troposphere and warms the midlatitude upper troposphere and stratosphere. Our results highlight the importance of the radiative adjustment in the overall adjustment and provide a potential method to understand the spread in the models.{\textless}/p{\textgreater}{\textless}/section{\textgreater}},
	language = {EN},
	number = {3},
	urldate = {2021-05-06},
	journal = {Journal of Climate},
	author = {Wang, Yuwei and Huang, Yi},
	month = dec,
	year = {2019},
	note = {Publisher: American Meteorological Society
Section: Journal of Climate},
	pages = {787--803},
}

