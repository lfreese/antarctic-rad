	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Mori, T. and Kondo, Y. and Ohata, S. and Zhao, Y. and Sinha, P. R. and Oshima, N. and Matsui, H. and Moteki, N. and Koike, M.},
