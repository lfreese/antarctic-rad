@article{jin_inferring_2020,
	title = {Inferring {Changes} in {Summertime} {Surface} {Ozone}–{NO} $_{\textrm{ \textit{x} }}$ –{VOC} {Chemistry} over {U}.{S}. {Urban} {Areas} from {Two} {Decades} of {Satellite} and {Ground}-{Based} {Observations}},
